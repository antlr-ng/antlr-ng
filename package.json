{
    "name": "@antlr-ng/antlr-ng",
    "version": "2.0.0-alpha",
    "description": "Next generation ANTLR Tool",
    "type": "module",
    "author": "Mike Lischke",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/antlr-ng/antlr-ng.git"
    },
    "homepage": "https://www.antlr-ng.org/",
    "bugs": {
        "url": "https://github.com/antlr-ng/antlr-ng/issues"
    },
    "bin": {
        "antlr-ng": "dist/cli/runner.js",
        "testrig": "dist/cli/TestRig.js",
        "grun": "dist/cli/TestRig.js",
        "interpreter": "dist/cli/Interpreter.js"
    },
    "keywords": [
        "lexer",
        "parser",
        "antlr-ng",
        "antlr4",
        "grammar",
        "TypeScript"
    ],
    "license": "MIT",
    "dependencies": {
        "antlr4ng": "3.0.16",
        "commander": "13.1.0",
        "memfs": "4.17.0",
        "stringtemplate4ts": "2.0.1",
        "unicode-properties": "1.4.1"
    },
    "devDependencies": {
        "@eslint/js": "9.29.0",
        "@stylistic/eslint-plugin": "4.4.1",
        "@stylistic/eslint-plugin-ts": "4.4.1",
        "@types/node": "24.0.3",
        "@types/unicode-properties": "1.3.2",
        "@typescript-eslint/eslint-plugin": "8.34.1",
        "@typescript-eslint/parser": "8.34.1",
        "@unicode/unicode-16.0.0": "1.6.6",
        "antlr-ng": "1.0.10",
        "esbuild": "0.25.5",
        "eslint": "9.29.0",
        "eslint-plugin-import": "2.31.0",
        "eslint-plugin-jsdoc": "51.0.3",
        "eslint-plugin-prefer-arrow": "1.2.3",
        "tsx": "4.20.3",
        "typedoc": "0.28.5",
        "typedoc-plugin-markdown": "4.7.0",
        "typedoc-vitepress-theme": "1.1.2",
        "typescript": "5.8.3",
        "typescript-eslint": "8.34.1",
        "vitepress": "1.6.3",
        "vitest": "3.2.4"
    },
    "scripts": {
        "prepublishOnly": "npm run build && npm run copy-templates && npm run test",
        "build": "npm run generate-version-file && npm run generate-action-splitter && npm run generate-antlr-parser && npm run generate-test-parsers && npm run generate-unicode-data && npm run esbuild && tsc -p tsconfig.json",
        "esbuild": "tsx build/build.ts",
        "copy-templates": "tsx build/copy-templates.ts",
        "test": "npm run generate-version-file && vitest --no-watch --no-coverage",
        "generate-action-splitter": "npm run generate-parser -- -o ./src/generated ./src/grammars/ActionSplitter.g4",
        "generate-antlr-parser": "npm run generate-parser -- -o ./src/generated ./src/grammars/ANTLRv4Lexer.g4 ./src/grammars/ANTLRv4Parser.g4",
        "generate-test-parsers": "npm run generate-testp1 && npm run generate-testp2 && npm run generate-testp3 && npm run generate-testp4 && npm run generate-testp5",
        "generate-testp1": "npm run generate-parser -- -o ./tests/generated ./tests/grammars/Java.g4",
        "generate-testp2": "npm run generate-parser -- -o ./tests/generated ./tests/grammars/JavaLR.g4",
        "generate-testp3": "npm run generate-parser -- -o ./tests/generated ./tests/grammars/PositionAdjustingLexer.g4",
        "generate-testp4": "npm run generate-parser -- -o ./tests/generated ./tests/grammars/Psl.g4",
        "generate-testp5": "npm run generate-parser -- -o ./tests/generated ./tests/grammars/expr.g4",
        "generate-parser": "antlr-ng -Dlanguage=TypeScript --exact-output-dir",
        "generate-mysql-cpp": "antlr-ng -Dlanguage=Cpp -DexportMacro=ANTLR4CPP_PUBLIC -p antlr4 --exact-output-dir -l -v -o ~/antlr-ng-test-generation/mysql/Cpp/old ./tests/grammars/MySQLLexer.g4 ./tests/grammars/MySQLParser.g4",
        "generate-mysql-ts": "antlr-ng -Dlanguage=TypeScript -p antlr4 --exact-output-dir -l -v -o ~/antlr-ng-test-generation/mysql/TypeScript/old ./tests/grammars/MySQLLexer.g4 ./tests/grammars/MySQLParser.g4",
        "generate-mysql-c#": "antlr-ng -Dlanguage=CSharp -p antlr4 --exact-output-dir -l -v -o ~/antlr-ng-test-generation/mysql/C#/old ./tests/grammars/MySQLLexer.g4 ./tests/grammars/MySQLParser.g4",
        "generate-unicode-data": "tsx ./build/generate-unicode-data.ts",
        "generate-version-file": "tsx ./build/generate-version-file.ts",
        "generate-docs": "typedoc --options typedoc.json",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "docs:preview": "vitepress preview docs"
    },
    "exports": {
        "types": "./dist/src/index.d.ts",
        "import": "./dist/src/index.js"
    },
    "browserslist": [
        "defaults and fully supports es6-module",
        "maintained node versions"
    ]
}
