{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build",
            "label": "tsc: watch"
        },
        {
            "label": "ESLint",
            "type": "shell",
            "problemMatcher": "$eslint-stylish",
            "command": "npm run lint",
        },
        {
            "label": "ESLint:fix",
            "type": "shell",
            "problemMatcher": "$eslint-stylish",
            "command": "npm run lint:fix",
        }
    ]
}
