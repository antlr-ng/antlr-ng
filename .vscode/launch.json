{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "antlr-debug",
            "request": "launch",
            "name": "Debug Current Grammar",
            "input": "input.txt",
            "visualParseTree": true,
            "startRule": "a",
            "grammar": "${file}",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch antlr-ng",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "tsx",
                "cli/runner.ts",
                "-Dlanguage=TypeScript",
                "--exact-output-dir",
                "-o",
                "./src/generated",
                "./src/grammars/ANTLRv4Lexer.g4",
            ],
            "sourceMaps": true,
            "stopOnEntry": false,
            "smartStep": true,
            "console": "integratedTerminal",
            "preLaunchTask": "tsc: watch",
            "trace": false
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch antlr-ng grammar-v4",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "tsx",
                "cli/runner.ts",
                "-Dlanguage=TypeScript",
                "-l",
                "-v",
                "-o",
                "grammar-v4-test/",
                "/Volumes/Extern/Work/projects/grammars-v4/abb/abbLexer.g4",
                "/Volumes/Extern/Work/projects/grammars-v4/abb/abbParser.g4",
            ],
            "sourceMaps": true,
            "stopOnEntry": false,
            "smartStep": true,
            "console": "integratedTerminal",
            "preLaunchTask": "tsc: watch",
            "trace": false
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Unicode extraction",
            "runtimeExecutable": "npx",
            "args": [],
            "runtimeArgs": [
                "tsx",
                "build/generate-unicode-data.ts",
            ],
            "sourceMaps": true,
            "stopOnEntry": false,
            "smartStep": true,
            "console": "integratedTerminal",
            "preLaunchTask": "tsc: watch",
            "trace": false
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current Test File",
            "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
            "args": [
                "run",
                "${relativeFile}"
            ],
            "autoAttachChildProcesses": true,
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "console": "integratedTerminal",
            "smartStep": true
        }
    ]
}
