{
    "compilerOptions": {
        "target": "ESNext",
        "module": "Node16",
        "outDir": "./output",
        "sourceMap": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "experimentalDecorators": true,
        "moduleResolution": "Node16",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "lib": [
            "ESNext",
        ],
    },
    "include": [
        "tool/*.ts",
        "tool/**/*.ts",
        "runtime-testsuite/**/*.ts",
    ],
    "exclude": [
        "node_modules/**/*.*",
        "output/**/*.*"
    ],
}
